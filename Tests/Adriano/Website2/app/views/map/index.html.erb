<html>
	<head>
		<!--FancyBox-->
		<script>
			$("#about").fancybox({
			'width'         : '600px',
			'height'        : '600px',
			'autoScale'     : false,
			'transitionIn'  : 'none',
			'transitionOut' : 'none',
			'type'          : 'iframe',
			'enableEscapeButton' : true,
			'fitToView' : true,
   			'autoSize' : false
		});
		
			$("#statistics").fancybox({
			'width'         : '400',
			'height'        : '390',
			'autoScale'     : false,
			'transitionIn'  : 'none',
			'transitionOut' : 'none',
			'type'          : 'iframe',
			'scrolling'     : 'no',
			'enableEscapeButton' : true,
			'fitToView' : true,
   			'autoSize' : false
		});
      	

		</script>
		
		<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
		
	</head>

	<body>
		<div id="head_line"></div>
		
		<div id="header">
			<div id="inside_text">
				<title1>#biobr</title1>
			</div>
		</div>
	
		<div id="content">
			<iframe src="tweets" width="100%" height="100%" frameBorder="0"></iframe>
			<div id="searchbox">
				<form>
					<%= form_tag("/search", method: "get") do %>
 				 		<%= text_field_tag(:q, "Filtrar...") %>
					<% end %>
					<div class="styled-select">
						<select>
						  <option value="username">Usuário</option>
						  <option value="specie">Espécie</option>
						  <option value="location">Localização</option>
						</select>
					</div>

					<button type="submit" class="btnSrc">
                		<i class="fa fa-search"></i>
            		</button>
				</form>
			</div>
		</div>

		<div id="footer">
			<div id="inside_text">
				<a id="about" class="fancybox.iframe" rel="group" href="sobre" title="Sobre"><title2>Sobre</title2></a>
				<a id="statistics" class="fancybox.iframe" rel="group" href="estatisticas" title="Estatísticas"><title2>Estatísticas</title2></a>
			</div>
		</div>
		
		<div id="logotipo">
			<a href="/">
				<img src="logotipo.png" />
			</a>
			
			
            
		</div>
		
		
	<%= gmaps4rails(@json) %>
		
		
	</body>
</html>