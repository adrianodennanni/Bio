<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<html>
	<head>
		<!--FancyBox-->
		<script>
			$("#about").fancybox({
			'width'         : '600px',
			'height'        : '600px',
			'autoScale'     : false,
			'transitionIn'  : 'none',
			'transitionOut' : 'none',
			'type'          : 'iframe',
			'enableEscapeButton' : true,
			'fitToView' : true,
						'autoSize' : false
			});
			
			$("#statistics").fancybox({
			'width'         : '400',
			'height'        : '390',
			'autoScale'     : false,
			'transitionIn'  : 'none',
			'transitionOut' : 'none',
			'type'          : 'iframe',
			'scrolling'     : 'no',
			'enableEscapeButton' : true,
			'fitToView' : true,
						'autoSize' : false
			});
			
			$("#photo").fancybox({
				'width'         : '400px',
				'height'        : '280px',
				'autoScale'     : false,
				'transitionIn'  : 'none',
				'transitionOut' : 'none',
				'type'          : 'iframe',
				'enableEscapeButton' : true
			});
			   	
			
		</script>
		<script language="JavaScript" src="//code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>
		<script language="JavaScript" type="text/javascript">
			$(document).ready(function(){
				$("#box_header_m").hide();
				
			$("#rtr_left_div").click(function(){
						 $("#side_panel").toggle("slide");
						 $("#box_header_m").toggle("slide");
				});
				
				$("#box_header_m").click(function(){
						 $("#side_panel").toggle("slide");
						 $("#box_header_m").toggle("slide");
				});
			});
				
		</script>
		<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	</head>
	<body>
		<div id="head_line"></div>
		<div id="box_header_m">
			<i class="fa fa-angle-double-left fa-2x"></i>
		</div>
		
<div id="side_panel">
			<div id="box_header">
				<div id="rtr_left_div">
					<i class="fa fa-angle-double-right fa-2x"></i>
				</div>
			</div>
			<div id="content">
				<div id="sidebar">
  				  		<%= render @tweets %>			
				<br/>
				</div>
				<div id="searchbox">
					<div class="styled-select">
						<%= search_form_for @q, :remote=>"true" , :method => :get do |f| %>
							
								<%= f.text_field :text_cont, :placeholder => "Filtrar..." %>
								<button type="submit" class="btnSrc" >
									<i class="fa fa-search"></i>
								</button>
							<% end %>				
					</div>
				</div>
				<div id="paginator">				
					<%= paginate @tweets , :remote => true %>					
				</div>
			</div>
		</div>
		
		<div id="footer">
			<a id="about" class="fancybox.iframe" rel="group" href="sobre" title="Sobre">
				<title2>Sobre</title2>
			</a>
			<a id="statistics" class="fancybox.iframe" rel="group" href="estatisticas" title="Estatísticas">
				<title2>Estatísticas</title2>
			</a>
		</div>
		<div id="logotipo">
			<a href="/">
			<img src="logotipo.png" width="165" height="80"/>
			</a>
		</div>
		
		
		<!-- MAP -->
		<%= render "map" %>	
		
	</body>
</html>
