<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<html>
	<head>
        <%= render('map/javascripts') %>
		<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
	</head>
	<body>
		<div id="head_line"></div>
		<div id="box_header_m">
			<i class="fa fa-angle-double-left fa-2x"></i>
		</div>
		
<div id="side_panel">
			<div id="box_header">
				<div id="rtr_left_div">
					<i class="fa fa-angle-double-right fa-2x"></i>
				</div>
				<div id="tabs">
					<ul class="nav nav-pills nav-justified">
					  <li id="posts_tab"><a>Postagens</a></li>
					  <li id="filters_tab"><a>Filtros</a></li>
					</ul>
				</div>
			</div>
			<div id="content">
				<div id="sidebar">
  				  	<%= render @tweets , :remote => true %> 				  					
					<br/>
				</div>
				<div id="searchbox">
					<div class="styled-select">
						<%= search_form_for @q, :remote=>"true" , :method => :get do |f| %>
							<%= f.text_field :text_cont, :placeholder => "Filtrar..." %>
							<button type="submit" class="btnSrc" >
								<i class="fa fa-search"></i>
							</button>
						<% end %>
					</div>
				</div>
				<div id="paginator">				
					<%= paginate @tweets , :remote => true %>					
				</div>
			</div>
            <div id="filters">
              <div id="sidebar">
                <%= render partial: 'filter' %>
                <br/>
              </div>
              <div id="searchbox">
                <div class="styled-select">
                  <%= search_form_for @q, :remote=>"true" , :method => :get do |f| %>
                      <%= f.text_field :text_cont, :placeholder => "Filtrar..." %>
                      <button type="submit" class="btnSrc" >
                        <i class="fa fa-search"></i>
                      </button>
                  <% end %>
                </div>
              </div>
              <div id="paginator">
              </div>
            </div>
		</div>
		
		<div id="logotipo">
			<img src="logotipo.png" width="165" height="80"/>
		</div>
		
		
		<!-- MAP -->
		<%= render "map" %>
		
		<!-- Button trigger modal -->
		<div id="info_btn">
			<button class="btn btn-success btn-sm" data-toggle="modal" data-target="#info">
			  Informações
			</button>
			<button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#subtitles">
			  Legendas
			</button>
			<button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#statistics">
			  Estatísticas
			</button>
		</div>
		
		<!-- Info modal -->
		<div class="modal fade" id="info" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
		        <h4 class="modal-title" id="myModalLabel">Informações</h4>
		      </div>
		      <div class="modal-body">
		        <%= render "about" %>	
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
		      </div>
		    </div>
		  </div>
		</div>
		
		<!-- Subtitles modal -->
		<div class="modal fade" id="subtitles" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
		        <h4 class="modal-title" id="myModalLabel">Legendas</h4>
		      </div>
		      <div class="modal-body">
		        <%= render "subtitles" %>	
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
		      </div>
		    </div>
		  </div>
		</div>
		
		<!-- Statistics modal -->
		<div class="modal fade full" id="statistics" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" heigth="90" >
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
		        <h4 class="modal-title" id="myModalLabel">Legendas</h4>
		      </div>
		      <div class="modal-body">
		        <%= render "statistics" %>	
		      </div>
		      <div class="modal-footer">
		        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
		      </div>
		    </div>
		  </div>
		</div>
		
		
	</body>
</html>
